{
  "compilerOptions": {
    "baseUrl": "../../../docs/snippets",
    "outDir": "./dist",
    "target": "es2018",
    "lib": [
      "es7",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",

  ],
  "assets": [
    "./src/views/*",
    "./src/public/*",
    "./src/data/*"
  ],
  "exclude": [
    "node_modules",
    "./public",
    "dist",
    "test"
  ]
}